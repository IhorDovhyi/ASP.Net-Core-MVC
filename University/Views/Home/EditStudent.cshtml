@model University.Models.Student
@{
    ViewBag.Title = "Edit Student";
}
<h2>Student Edit</h2>
<form asp-action="EditStudent" asp-controller="home" asp-route-id="@Model.StudentId">
    @using (Html.BeginForm("EditBook", "Home", FormMethod.Post))
    {
        <fieldset>
            @Html.HiddenFor(s => s.StudentId)
            @Html.HiddenFor(s => s.GroupId)
            <div class="form-group">
                @Html.LabelFor(s => s.FirstName, "First name")
                <input type="text" required asp-for="FirstName" class="form-control" />
                @Html.LabelFor(s => s.LastName, "Last name")
                <input type="text" required asp-for="LastName" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </fieldset>
    }
</form>