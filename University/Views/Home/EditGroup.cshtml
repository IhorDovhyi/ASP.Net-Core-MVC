@model University.Models.Group
@{
    ViewBag.Title = "Edit Group";
}
<h2>Group Edit</h2>
<form asp-action="EditGroup" asp-controller="home" asp-route-id="@Model.GroupId">
    @using (Html.BeginForm("EditBook", "Home", FormMethod.Post))
    {
    <fieldset>
        @Html.HiddenFor(g => g.GroupId)
        @Html.HiddenFor(g => g.CourseId)
        <div class="form-group">
            @Html.LabelFor(g => g.Name, "Group name")
            <input type="text" required asp-for="Name" class="form-control" />
        </div>
        <div class="form-group">
             <input type="submit" value="Save" class="btn btn-default" />
        </div>
    </fieldset>
    }
</form>